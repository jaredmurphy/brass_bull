<h1> Create New Post </h1>

<%= form_for @post, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
  <%= f.hidden_field :user_id, value: @post.user_id %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :body %>
  <%= f.text_area :body, size: "60x12" %>

  <%= f.submit "Create" %>
<% end %>
