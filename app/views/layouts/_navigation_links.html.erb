<% if current_user %>
  <%= render "layouts/nav_link",
    link: {
      name: "Posts",
      path: :posts,
      active: current_page?(controller: "posts", action: "index")
    }
  %>

  <%= link_to "Account", "/account", class: "header__link" %>

  <% if current_user.admin? %>
    <%= render "layouts/nav_link",
      link: {
        name: "Admin",
        path: :admin,
        active: current_page?(controller: "admin/dashboard", action: "index")
      }
    %>
  <% end %>

  <%= render "layouts/nav_link", link: { name: "Log out", path: :destroy_user_session, method: :delete } %>

<% else %>
  <%= render "layouts/nav_link", link: { name: "Login", path: :new_user_session, } %>
  <%= render "layouts/nav_link", link: { name: "Sign up", path: :new_user_registration, } %>
<% end %>
