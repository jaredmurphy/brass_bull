<div><%= @post.title %></div>

<p> By: <%= @post.pseudonym.name %> </p>

<% if can? :edit, @post %>
  <p> <%= link_to "Edit", edit_post_path(@post.id) %> </p>
<% end %>

<div><%= sanitize @post.body %></div>

<%= render partial: "comments/form", locals: { commentable: @post } %>
<%= render partial: "comments/index", locals: { comments: @post.comments } %>

